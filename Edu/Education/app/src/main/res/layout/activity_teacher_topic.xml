<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TeacherTopic">


    <EditText
        android:id="@+id/topicname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Tpoic name" />

    <EditText
        android:id="@+id/resource"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Resource" />

    <TextView
        android:id="@+id/topiccode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Topic Code:"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supervisor for group 1:"
            android:textSize="25dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Add Supervisor ID"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supervisor for group 2:"
            android:textSize="25dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Add Supervisor ID"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supervisor for group 3:"
            android:textSize="25dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Add Supervisor ID"/>

    </LinearLayout>

    <Button
        android:id="@+id/addtopic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="add topic"
        android:textAlignment="center" />
    <Button
        android:id="@+id/viewalltopic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="View All topic"
        android:textAlignment="center" />


</LinearLayout>